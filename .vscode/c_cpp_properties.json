{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include/c++/11", // 替换为你 g++ -v 查到的路径
                "/usr/include/x86_64-linux-gnu/c++/11" // 替换为实际路径
            ],
            "defines": [],
            "compilerPath": "/usr/bin/g++", // 明确指定 g++ 路径
            "cStandard": "c17",
            "cppStandard": "c++20", // 必须开启 C++20
            "intelliSenseMode": "linux-gcc-x64", // 匹配 GCC 模式（不是 clang）
            "compilerArgs": [
                "-std=c++20",
                "-fcoroutines" // GCC 特有的协程启用参数（关键！）
            ]
        }
    ],
    "version": 4
}